/* Custom Styles go here */#site-navigation #menu-top-menu li a {	font-size: 0.8em !important;}#site-navigation .nav-collapse{	float: right !important;}.site-header {	margin-top: 30px;	padding: 20px;}.site-header img {	max-width: 100px;	margin: 0px 20px 0px 0px;	float:left;}.site-header h1{	float: left;	clear:none !important;	font-size: 30px;	text-align:left;}.site-header h1 span{	font-size: 18px;}.widget-area .widget h3.widget-title,.archive-title, .page-title, .widget-title, .entry-content th, .comment-content th {	text-transform: none !important;}.synved-social-credit{	display: none;}.small{	font-size: 10px;}.follow_us{	margin-top:10px;	float:left;}.follow_us .synved-social-button img{	max-width:20px;	max-height:20px;}h1.entry-title, h3.widget-title, h1.archive-title { font-size:18pt !important;}.entry-content h2{font-size:15pt !important;}.date {font-size:13px;font-weight:bold;}.entry-summary p{	line-height: 1.714285714;	font-size: 14pt;font-weight: 300;border-bottom:1px dotted #cacaca;text-align:justify;}p{text-align:justify;}footer[role="contentinfo"] {border-top: 1px dotted #cacaca;padding:0px !important;padding: 0rem 0;}ul#menu-footer-menu{ list-style-type: none;}ul#menu-footer-menu li{ display: inline; list-style-type: none; padding-right: 20px;}.home_list h4{	font-size: 16px;	font-weight: bold;}.home_list ul{	padding: 0;	list-style:none;	margin: 10px 0px;	font-size: 13px;}.home_list ul li{	padding:5px 0px;	border-bottom:1px dotted #dadada;}.alignright{	float: right;}article.format-link header{	float: none;	text-transform: none;}.archive article{	border-bottom: 1px dotted #cacaca;	padding-bottom: 10px;	width: 100%;	float: left;	margin-bottom: 20px;}